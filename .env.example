# PNG Digital Electoral System - Environment Configuration Example
# Copy this file to .env.local for development or configure in your hosting platform

# üî¨ ENVIRONMENT MODE
NODE_ENV=production
VITE_ENVIRONMENT=production

# üîê SECURITY SETTINGS
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_CONSOLE_LOGS=false

# üìä ANALYTICS & MONITORING
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true

# üèõÔ∏è PNG GOVERNMENT SETTINGS
VITE_ORGANIZATION_NAME="PNG Electoral Commission"
VITE_DEPARTMENT_NAME="Digital Voting System"
VITE_SYSTEM_VERSION="1.0.0"
VITE_DEPLOYMENT_REGION="Pacific/Port_Moresby"

# üíæ PERFORMANCE SETTINGS
VITE_ENABLE_OFFLINE_CACHE=true
VITE_MAX_CACHE_SIZE=100MB
VITE_SYNC_BATCH_SIZE=50
VITE_IMAGE_COMPRESSION_QUALITY=0.8
VITE_ENABLE_IMAGE_OPTIMIZATION=true

# üì± MOBILE & TABLET SETTINGS
VITE_ENABLE_TOUCH_OPTIMIZATION=true
VITE_ENABLE_HAPTIC_FEEDBACK=true
VITE_SCREEN_TIMEOUT_MINUTES=30
VITE_AUTO_SAVE_INTERVAL_SECONDS=15

# üîÑ SYNC SETTINGS
VITE_AUTO_SYNC_ENABLED=true
VITE_SYNC_RETRY_ATTEMPTS=3
VITE_SYNC_TIMEOUT_SECONDS=30
VITE_BACKGROUND_SYNC_ENABLED=true

# üõ°Ô∏è BACKUP CONFIGURATION
VITE_AUTO_BACKUP_ENABLED=true
VITE_BACKUP_RETENTION_DAYS=90
VITE_BACKUP_ENCRYPTION_ENABLED=true

# üìç GPS & LOCATION
VITE_GPS_ACCURACY_METERS=50
VITE_GPS_TIMEOUT_SECONDS=30
VITE_REQUIRE_GPS_COORDINATES=true

# üé® UI/UX SETTINGS
VITE_THEME="png-traditional"
VITE_ENABLE_DARK_MODE=false
VITE_FONT_SIZE_MULTIPLIER=1.0
VITE_ANIMATION_DURATION=200

# üìã FORM VALIDATION
VITE_STRICT_VALIDATION=true
VITE_REQUIRE_ALL_BIOMETRICS=true
VITE_MAX_PHOTO_SIZE_MB=5
VITE_MAX_FINGERPRINT_SIZE_MB=1

# üîç AUDIT & COMPLIANCE
VITE_ENABLE_AUDIT_LOGS=true
VITE_LOG_RETENTION_DAYS=365
VITE_COMPLIANCE_MODE="PNG_ELECTORAL_COMMISSION"

# üß™ DEMO/DEVELOPMENT MODE (Set to false in production)
VITE_DEMO_MODE=false
VITE_ENABLE_DEMO_USERS=false
VITE_DISABLE_FIREBASE_INIT=false

# üî• FIREBASE CONFIGURATION (Required for production)
# Get these from your Firebase Console: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY="your-api-key-here"
VITE_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="your-project-id"
VITE_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
VITE_FIREBASE_MESSAGING_SENDER_ID="123456789012"
VITE_FIREBASE_APP_ID="1:123456789012:web:abcdef123456"
VITE_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"

# üìß NOTIFICATIONS & ALERTS
VITE_ADMIN_EMAIL="admin@electoral.gov.pg"
VITE_SUPPORT_EMAIL="support@electoral.gov.pg"
VITE_EMERGENCY_CONTACT="+675-XXX-XXXX"

# üåê API ENDPOINTS (Configure for production)
VITE_API_BASE_URL="https://api.electoral.gov.pg"
VITE_BACKUP_API_URL="https://backup.electoral.gov.pg"
VITE_SYNC_API_URL="https://sync.electoral.gov.pg"

# üîí SECURITY HEADERS
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_XSS_PROTECTION=true
